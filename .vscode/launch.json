{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Home Assistant: Launch and Debug",
      "type": "python",
      "request": "launch",
      "program": "-m",
      "args": [
        "homeassistant",
        "--debug"
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": false
    },
    {
      "name": "Home Assistant: Attach",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/custom_components",
          "remoteRoot": "/config/custom_components"
        }
      ],
      "justMyCode": false
    }
  ]
}